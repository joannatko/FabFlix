<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
                android:background="#141414" android:layout_centerHorizontal="false"
                android:layout_centerVertical="false" android:layout_centerInParent="true">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:hint="Username"
            android:focusable="true"
            android:layout_marginTop="271dp"
            android:layout_below="@+id/title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_marginLeft="18dp" android:layout_marginStart="18dp"
            android:layout_marginRight="14dp" android:layout_marginEnd="14dp"
            android:textColor="@android:color/white" android:textColorHint="@android:color/white"/>
    <Button
            android:text="Login"
            android:layout_width="105dp"
            android:layout_height="60dp"
            android:id="@+id/login"
            android:layout_below="@+id/password" android:layout_marginTop="89dp"
            android:layout_centerInParent="true" android:layout_alignTop="@id/password"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:layout_below="@+id/username"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/username"
            android:layout_alignEnd="@+id/username"
            android:hint="Password" android:layout_marginLeft="18dp" android:layout_marginTop="0dp"
            android:layout_marginStart="18dp" android:layout_marginRight="0dp" android:layout_marginEnd="0dp"
            android:textColor="@android:color/white" android:textColorHint="@android:color/white"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            android:layout_below="@+id/login"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:textColor="@color/red"/>
    <ImageView
            android:layout_width="254dp"
            android:layout_height="165dp"
            android:id="@+id/imageView" android:src="@mipmap/logo"
            android:layout_centerHorizontal="true" android:scaleType="fitCenter"
            android:adjustViewBounds="false" android:cropToPadding="true"
            android:maxHeight="200dp" android:layout_alignBottom="@id/username"
            android:layout_marginBottom="62dp"/>

</RelativeLayout>